<main>
    
<div class="container px-5 px-sm-0">
<div class="container">
  <div class="row">
    <div class="col-md-3">
      <%= render 'users/list', user: @user, book: @book%>
    </div>
    <div class="col-md-8 offset-md-1">
      <!-- ユーザーの投稿一覧 -->

      <h1>Book detail</h1>
      <table class="table table-hover table-inverse">
          <thead>
              <tr>
                  <th></th>
                  <th>Title</th>
                  <th>Opinion</th>
                  <th colspan="3"></th>
              </tr>
              </thead>
              
              
              <tbody>
                
      <tr>
        <%= link_to book_path(@book_detail.id) do %>
          <!--%= image_tag book.get_image %-->
        <% end %>
        <td><%= image_tag @book_detail.user.get_profile_image(100,100) %>
        <br><%= link_to @book_detail.user.name, user_path(@book_detail.user.id) %>
        </td>
        <td><%=link_to @book_detail.title, book_path(@book_detail.id) %></td>
        <td><%= @book_detail.body %></td>
        <% if @book_detail.user == current_user %>
        <td><%= link_to "Edit", edit_book_path(@book_detail.id), class: "btn btn-sm btn-success" %></td>
        <td><%= link_to "Destroy", destroy_book_path(@book_detail.id), method: :delete, "data-confirm" => "本当に削除しますか？", class: "btn btn-sm btn-danger" %></td>
        <% end %>
      </tr>
      
      </tbody>
      </table>
    </div>
  </div>
</div>
</div>
</main>